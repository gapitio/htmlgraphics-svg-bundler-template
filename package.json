{
  "name": "bundle-template",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "run-s validate build:prod build:custom-properties build:svg-data build:panel-options",
    "build:custom-properties": "node --experimental-json-modules ./scripts/customProperties.js",
    "build:dev": "rollup -c rollup.config.dev.js",
    "build:svg-data": "node ./scripts/svgData.js",
    "build:prod": "rollup -c rollup.config.prod.js ",
    "build:panel-options": "node ./scripts/panelOptions.js",
    "dev": "run-p watch serve:dev",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "eslint . --ext .ts,.js,.cjs --fix",
    "fix:prettier": "prettier --write .",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint . --ext .ts,.js,.cjs",
    "lint:prettier": "prettier --check .",
    "serve": "sirv public --single --host",
    "serve:dev": "sirv public --single --host --dev",
    "typecheck": "tsc --noEmit",
    "validate": "run-s typecheck lint",
    "watch": "rollup -c rollup.config.dev.js -w"
  },
  "devDependencies": {
    "@grafana/data": "~7.1.5",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-unicorn": "^28.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.7",
    "prettier": "^2.2.1",
    "rollup": "^2.40.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sirv-cli": "^1.0.11",
    "svgo": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
